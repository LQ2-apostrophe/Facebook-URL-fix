{
	"name": "Query stripper",
	"version": "1.6",
	"manifest_version": 2,

	"description": "Strips annoying query parameters from URLs. It does utm_* (google), atl_* (atlassian) and ref_ (imdb) now.",
	"icons": {
		"128": "logo_128.png",
		"48": "logo_48.png"
	},

	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"*://*/*"
	],
	"background": {
		"scripts": [ "logic.js", "background.js" ]
	},
	"content_scripts": [{
		"all_frames": true,
		"run_at": "document_start",
		"js": [ "logic.js", "content.js" ],
		"matches": [ "http://*/*", "https://*/*" ]
	}],
	"options_page": "options/options.html"
}
